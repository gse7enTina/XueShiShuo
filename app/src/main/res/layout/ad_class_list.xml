<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_head_img"
        android:layout_width="30dp"
        android:layout_height="30dp"

        />
    <TextView
        android:id="@+id/adapter_query_trans_txnRst"
        android:layout_width="100dp"
        android:layout_height="18dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:clickable="false"
        android:textColor="@color/black_font_color"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/adapter_query_trans_date"
        android:layout_width="200dp"
        android:layout_height="12dp"
        android:layout_below="@id/adapter_query_trans_txnRst"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:clickable="false"
        android:textColor="@color/grey_font_color"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/adapter_query_trans_res"
        android:layout_width="200dp"
        android:layout_height="12dp"
        android:layout_below="@id/adapter_query_trans_date"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="6dp"
        android:clickable="false"
        android:textColor="@color/grey_font_color"
        android:textSize="10sp" />

    <View
        android:id="@+id/adapter_view"
        android:layout_width="1px"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="80dp"
        android:background="#dbdbdb" />

    <TextView
        android:id="@+id/adapter_query_trans_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/pro_check_btn"
        android:gravity="center"
        android:textColor="@color/colorNormal"
        android:textSize="14sp" />

</RelativeLayout>